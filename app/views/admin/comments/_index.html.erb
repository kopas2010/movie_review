<table class='table table-hover table-inverse'>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td>
          <%= image_tag comment.user.get_profile_image(50,50) %>
          <%= link_to comment.user.name, admin_user_path(comment.user.id) %>
        </td>
        <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= link_to comment.comment, admin_review_path(comment.review.id) %></td>
        <td>
          <td><%= link_to "編集", edit_admin_comment_path(comment.id), class: "btn btn-success btn-sm btn-block" %></td>
          <td><%= link_to "削除", admin_comment_path(comment.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm btn-block" %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>