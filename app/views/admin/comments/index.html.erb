<div>
  <p>コメント件数：<%= @comments.count %></p>
  <% @comments.each do |comment| %>
    <p><%= image_tag comment.user.get_profile_image(100,100) %></p>
    <%= link_to comment.user.name, admin_user_path(comment.user.id) %>
    <%= comment.created_at.strftime('%Y/%m/%d') %>
    <%= link_to comment.comment, admin_review_path(comment.review.id) %>
    <%= link_to "編集", edit_admin_comment_path(comment.id) %>
    <%= link_to "削除", admin_comment_path(comment.id), method: :delete %>
  <% end %>
</div>