<h3>レビュー詳細</h3>
  <p><%= image_tag @review.movie.image, size: "100x100" %></p>
  <%= link_to @review.movie.title, admin_movie_path(@review.movie.id) %>
  <p><%= image_tag @review.user.get_profile_image(100,100) %></p>
  <%= link_to @review.user.name, user_path(@review.user.id) %>
  <%= @review.created_at.strftime('%Y/%m/%d') %>
  <%= @review.title %>
  <%= @review.body %>
  <% if current_admin %>
    <%= link_to "編集", edit_admin_review_path(@review) %>
    <%= link_to "削除", admin_review_path(@review), method: :delete %>
  <% end %>

  <div>
  <p>コメント件数：<%= @review.comments.count %></p>
  <% @review.comments.each do |comment| %>
    <p><%= image_tag comment.user.get_profile_image(100,100) %></p>
    <%= link_to comment.user.name, user_path(comment.user.id) %>
    <%= comment.created_at.strftime('%Y/%m/%d') %>
    <%= comment.comment %>
    <% if current_admin %>
      <%= link_to "編集", edit_admin_comment_path(comment) %>
      <%= link_to "削除", admin_comment_path(comment), method: :delete %>
    <% end %>
  <% end %>
</div>