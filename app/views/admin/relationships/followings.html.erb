    <div class='col-md-8 offset-md-2'>
  		<h2>フォロー中</h2>
  		<table class='table'>
  		  <thead>
          <tr>
            <th></th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
  		  <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(50,50) %></td>
            <td><%= link_to user.name, admin_user_path(user.id) %></td>
            <td>フォロー数：<%= user.relationships.count %></td>
            <td>フォロワー数：<%= user.followers.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>