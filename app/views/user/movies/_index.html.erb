<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% movies.each do |movie| %>
      <tr>
        <td><%= link_to movie_path(movie.id) do %>
          <%= image_tag movie.image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to movie.title,movie, class: "movie_#{movie.id}" %></td>
        <td>
        <% if current_user %>
        <% if movie.favorited_by?(current_user) %>
          <%= link_to movie_favorites_path(movie), method: :delete do %>
            <span style="color:red;">❤︎</span>
            <%= movie.favorites.count %>
          <% end %>
        <% else %>
          <%= link_to movie_favorites_path(movie), method: :post do %>
            <span>❤︎</span>
            <%= movie.favorites.count %>
          <% end %>
        <% end %>
        <% end %>
        </td>
        <td>
					<p>レビュー数：<%= movie.reviews.count %></p>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>